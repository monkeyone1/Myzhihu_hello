<resources>

     Base application theme.
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:textColorPrimary">@color/primary_text_night</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/icons</item>
        <item name="android:icon">@color/icons</item>
        <item name="android:divider">@color/divider</item>

        <item name="item_bg">@color/primary_text_night</item>
        <item name="toolbarTheme">@color/primary_dark</item>
        <item name="text_color">@color/primary_text</item>
        <item name="itemBackground">@color/primary_text_night</item>
        <item name="backgroundColor">@color/primary_text_night</item>


    </style>

    <style name="nightAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <!--这是App深色调的基本颜色，主要用于通知栏背景-->
        <item name="colorPrimaryDark">@color/primary_dark_night</item>
        <!--这是App的主要颜色，用于工具栏背景-->
        <item name="colorPrimary">@color/primary_night</item>
        <!--这是文本的主要颜色，用于工具栏标题-->
        <item name="android:textColorPrimary">@color/primary_text_night</item>
        <!--这是次文本的主要颜色，用于工具栏次标题-->
        <item name="android:textColorSecondary">@color/secondary_text_night</item>
        <!--分割线颜色-->
        <item name="android:divider">@color/divider_night</item>
        <!--toolsbar的背景颜色 -->
        <item name="toolbarTheme">@color/primary_night</item>

        <item name="item_bg">@color/primary_night</item>
        <!-- 条目的字体颜色 -->
        <item name="text_color">@color/primary_text_night</item>

        <item name="itemBackground">@color/item_color_night</item>

        <item name="backgroundColor">@color/background_color_night</item>
    </style>




    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/primary_light</item>
    </style>
    <style name="TextAppearance.CollapsedTitle" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:textSize">15sp</item>
    </style>
</resources>
